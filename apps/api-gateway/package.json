{
  "name": "@trashify/api-gateway",
  "version": "0.0.0",
  "author": "Kacper Bylicki & Marek Gerszendorf & Jakub Barczewski",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "rimraf dist && nest build",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test:unit": "jest --config=test/unit/jest.config.js --passWithNoTests",
    "test:ci:unit": "jest --config=test/unit/jest.config.js --ci --runInBand --passWithNoTests",
    "test:ci": "yarn test:ci:unit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@fastify/compress": "^6.2.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/static": "^6.9.0",
    "@nestjs/cache-manager": "^1.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/microservices": "^9.3.9",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-fastify": "^9.3.9",
    "@nestjs/terminus": "^9.2.1",
    "@trashify/transport": "^1.0.0",
    "@unifig/adapter-env": "^0.13.0",
    "@unifig/core": "^0.13.0",
    "@unifig/nest": "^0.13.0",
    "@unifig/validation-presenter-json": "^0.13.0",
    "cache-manager": "^5.2.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.0",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.5",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/testing": "^9.0.0",
    "@trashify/testing": "*",
    "@trashify/tsconfig": "*",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "^18.14.5",
    "@types/supertest": "^2.0.11",
    "eslint-config-backend": "*",
    "jest": "29.3.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-proto": "^1.140.0",
    "tsconfig-paths": "4.1.2",
    "turbo": "^1.7.4",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./test",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "ts-jest": {
    "isolatedModules": false
  }
}