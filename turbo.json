{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test:unit": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "test/unit/**/*.ts"
      ],
      "outputMode": "full"
    },
    "test:integration": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "test/integration/**/*.ts"
      ],
      "outputMode": "full"
    },
    "test:ci": {
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}